generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Visitante {
  id String @db.VarChar(36) @id @default(uuid())
  nome String
  data_nascimento String
  sexo String
  telefone String
  endereco String
  bairro String
  quem_convidou String
  como_conheceu_sara String
  data_visita String
  tipo_culto String
  created_at DateTime @default(now()) @db.Timestamptz(3)
}